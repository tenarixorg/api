{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
